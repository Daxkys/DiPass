<resources>

    <!-- Base application theme -->

    <!-- TODO: change to Theme.MaterialComponents.DayNight -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>

        <item name="colorSecondary">@color/blue_primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/blue_primary</item>

        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">@color/brand_background</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>


    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
